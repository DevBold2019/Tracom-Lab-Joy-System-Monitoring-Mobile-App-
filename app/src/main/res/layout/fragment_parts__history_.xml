<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.parts_History_Fragment">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:queryHint="Search by part model"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/searchPartsSearchView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/parts"
        android:id="@+id/partsHistoryRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/searchPartsSearchView"/>




</androidx.constraintlayout.widget.ConstraintLayout>