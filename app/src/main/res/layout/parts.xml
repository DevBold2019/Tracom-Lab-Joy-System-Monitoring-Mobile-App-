<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        card_view:cardElevation="0dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Manufacuterer Name"
                android:maxLines="3"
                android:maxWidth="150dp"
                android:layout_margin="6dp"
                android:id="@+id/ManufacutererName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/PartModel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:maxWidth="150dp"
                android:maxLength="80"
                android:maxLines="2"
                android:padding="4dp"
                android:text="Part Model"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/ManufacutererName"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/morePartDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/ManufacutererName"
                card_view:layout_editor_absoluteX="5dp">


                <TextView
                    android:id="@+id/PartName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:maxWidth="150dp"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="Part Name" />


                <TextView
                    android:id="@+id/PartNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:maxWidth="150dp"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="Part Number"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:maxWidth="150dp"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="Description"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/moreButtonParts"
                android:textColor="#000"
                android:padding="6dp"
                android:src="@drawable/downbuttonpx"
                android:layout_margin="6dp"
                app:layout_constraintTop_toBottomOf="@+id/morePartDetails"
                app:layout_constraintEnd_toEndOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>