<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        card_view:cardElevation="0dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="CustomerRepair"
                android:maxLines="3"
                android:maxWidth="150dp"
                android:layout_margin="6dp"
                android:id="@+id/customersRepairPage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/BatchNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:maxWidth="150dp"
                android:maxLength="80"
                android:maxLines="2"
                android:padding="4dp"
                android:text="BatchNumber"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/customersRepairPage"
                app:layout_constraintTop_toTopOf="parent" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:id="@+id/moreRepairPage"
                app:layout_constraintTop_toBottomOf="@+id/customersRepairPage"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="SerialNumber"
                    android:maxLines="2"
                    android:maxWidth="150dp"
                    android:id="@+id/customerSerialNumber"
                    android:layout_margin="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </LinearLayout>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/moreRepairButtonPage"
                android:textColor="#000"
                android:padding="6dp"
                android:src="@drawable/downbuttonpx"
                android:layout_margin="6dp"
                app:layout_constraintTop_toBottomOf="@+id/moreRepairPage"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="V"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>