<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">#fff</item>
    </style>

    <!-- progressBar Theme-->
    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorBackground</item>
    </style>

    <!--login Dialog-->
    <style name="loginDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#fff</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="colorAccent">#fff</item>
    </style>

    <style name="PinViewStyle" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:background">#fff</item>
        <item name="colorAccent">#000</item>
    </style>

    <style name="EmailText" parent="@style/Theme.AppCompat">
        <item name="android:textColor">#000</item>
        <item name="colorAccent">@color/colorBackground</item>
    </style>



</resources>
